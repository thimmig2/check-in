<h1>Manage Events</h1>

<h3>New Event</h3>
<%= render 'form' %>
<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    <tr <%= "onclick='document.location = '#{event_path(event)}';'" %>>
        <td><%= event.name %></td>
        <td><%= event.type_id %></td>
        <td><%= link_to 'Edit  ', edit_event_path(event), :class => "btn" %><%= link_to 'Destroy', event, :class => "btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


