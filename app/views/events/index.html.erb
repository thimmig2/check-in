<h1>Manage Events (Click to Edit)</h1>

<h3>New Event</h3>
<%= render 'form' %>
<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Attendees</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    <tr data-link="<%= url_for(event) %>">
        <td><%= event.name %></td>
        <td><%= event.type_id %></td>
        <td><%= event.checkins.count %></td>
        <td><%= link_to 'Delete', event, :class => "btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>


