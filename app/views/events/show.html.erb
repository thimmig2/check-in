<h1><%= "#{@event.name}  " %><%= link_to 'Destroy', event, :class => "btn", method: :delete, data: { confirm: 'Are you sure?' } %><h1>

<h3>New Checkin</h3>
  <%= render 'checkins/form' %>
<br>

<h3>Attendees</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @checkins.each do |checkin| %>
      <tr>
        <td><%= checkin.user.name %></td>
        <td><%= checkin.user.email %></td>
        <td><%= link_to 'Delete', checkin, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', events_path %>
