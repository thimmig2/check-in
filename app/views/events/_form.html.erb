
<%= simple_form_for(@event, html: {class: 'form-vertical', role: "form" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Name (Include Date)" %>
    <%= f.input :type_id, collection: ["Recruitment", "Professional", "Development", "Recreation", "Service", "Distinction", "Misc."] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit"%>
  </div>
<% end %>
